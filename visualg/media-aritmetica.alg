algoritmo "média escolar"
// SOLICITE A DIGITAÇÃO DE 2 NOTAS DE UM ALUNO
// CALCULE E EXIBA A MÉDIA ARITMÉTICA
var
nota1, nota2, media : real

inicio
escreva("Digite a nota 1: ")
leia(nota1)
escreva("Digite a nota 2: ")
leia(nota2)

media <- (nota1 + nota2) / 2
escreval("Média = ", media)

fimalgoritmo
